<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">

    <!-- Battle Arena Background -->
    <View
        android:id="@+id/arena_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#121212"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/control_panel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RIVAL INFO (Top Left/Center in classic, user asked for "Rival Arriba") -->
    <!-- Usually Rival is Top Right in DS games, let's stick to the image: Rival Top Right -->
    <LinearLayout
        android:id="@+id/rival_info_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/rival_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RIVAL"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/rival_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nv 50"
            android:textSize="14sp" />

        <ProgressBar
            android:id="@+id/rival_hp_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:progress="100"
            android:progressTint="#FF0000" />
    </LinearLayout>


    <!-- PLAYER INFO (Bottom Right in classic, user asked for "Mio Abajo") -->
    <!-- Usually Player is Bottom Left. Let's place Player Image Bottom Left and Info Bottom Right -->
    <LinearLayout
        android:id="@+id/player_info_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintBottom_toTopOf="@id/control_panel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp">

        <TextView
            android:id="@+id/player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLAYER"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/player_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nv 50"
            android:textSize="14sp" />

        <ProgressBar
            android:id="@+id/player_hp_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:progress="100"
            android:progressTint="#00FF00" />

        <TextView
            android:id="@+id/player_hp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100/100"
            android:layout_gravity="end"
            android:textSize="12sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/rival_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_pokeball"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="50dp" />

    <ImageView
        android:id="@+id/player_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_pokeball"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@id/control_panel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="20dp" />


    <!-- CONTROL PANEL -->
    <LinearLayout
        android:id="@+id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#333333"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Battle Log / Message Box -->
        <TextView
            android:id="@+id/battle_log"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:text="Â¡Empieza la batalla!"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"/>

        <!-- Moves Grid -->
        <GridLayout
            android:id="@+id/moves_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2">

            <Button
                android:id="@+id/move_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="-" />

            <Button
                android:id="@+id/move_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="-" />

            <Button
                android:id="@+id/move_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="-" />

            <Button
                android:id="@+id/move_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="HUIR"
                android:backgroundTint="#FF0000"/>

        </GridLayout>

    </LinearLayout>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:elevation="20dp"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/console_loader"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargando..."
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
