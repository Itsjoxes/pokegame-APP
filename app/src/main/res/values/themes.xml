<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Pokegame" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
    </style>

    <style name="Theme.Pokegame.NoActionBar" parent="Theme.Pokegame">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Theme variations -->
    <style name="Theme.Pokegame.Red"
        parent="Theme.Pokegame">
        <item name="colorPrimary">@color/red_primary</item>
    </style>

    <style name="Theme.Pokegame.Blue"
        parent="Theme.Pokegame">
        <item name="colorPrimary">@color/blue_primary</item>
    </style>

    <style name="Theme.Pokegame.HighContrast" parent="Theme.Pokegame">
        <item name="colorPrimary">#FFFF00</item> <!-- Yellow for high contrast -->
        <item name="android:colorBackground">#000000</item>
        <item name="colorOnBackground">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
    </style>

</resources>